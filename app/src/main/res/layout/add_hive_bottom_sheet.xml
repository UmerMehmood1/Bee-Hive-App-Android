<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_top_bottom_sheet_background">
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="gravity"
        android:theme="@style/Heading1TextStyle"
        android:text="Enter Hive Details" />
    <com.google.android.material.textfield.TextInputEditText
        android:singleLine="true"
        android:maxLines="1"
        android:layout_margin="10dp"
        android:background="?selectableItemBackground"
        android:id="@+id/NewHiveCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:theme="@style/Heading2TextStyle"
        android:textColor="@color/textColorH2"
        android:hint="Enter Hive Code to add"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: Hive code is unique to each hive. Contact admin to get your hive code."
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/gray"
        android:theme="@style/Heading2TextStyle" />
  <com.google.android.material.button.MaterialButton
      android:id="@+id/addHiveButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Add"
      android:layout_margin="10dp"
      android:textColor="@color/textColorH1"
      android:backgroundTint="@color/primaryColor"
      android:textStyle="bold"
      app:rippleColor="@color/gray"
      android:theme="@style/Heading2TextStyle" />
</LinearLayout>