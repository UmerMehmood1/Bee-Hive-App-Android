<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="6dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/alertItemIconBackground"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/hiveImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/round_warning_amber_24"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Heading1TextStyle"
            android:text="Temperature is too high"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/hiveName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Heading2TextStyle"
            android:text="Hive #1" />
    </LinearLayout>
</LinearLayout>