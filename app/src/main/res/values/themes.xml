<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BeeHiveClient" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primaryColor</item>
            <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.BeeHiveClient" parent="Base.Theme.BeeHiveClient" />
    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_colors</item>
        <item name="itemTextColor">@color/bottom_nav_item_colors</item>
    </style>
    <style name="Heading1TextStyle">
        <item name="android:textColor">@color/textColorH1</item>
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Heading2TextStyle">
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <!-- Use the custom drawable for the track -->
        <item name="track">@drawable/switch_track</item>
        <!-- Use the custom drawable for the thumb -->
        <item name="thumbColor">@drawable/switch_thumb</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@drawable/rounded_top_bottom_sheet_background</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>

</resources>